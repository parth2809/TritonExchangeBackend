{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "rules": {
    "consistent-return": 0,
    "func-names": "off",
    "global-require": "off",
    "max-classes-per-file": "warn",
    "max-len": ["error", {"code": 120}],
    "no-bitwise": ["error", {"allow": ["^"]}],
    "no-param-reassign": "off",
    "no-unused-vars": ["error", {"argsIgnorePattern": "next|transaction|Sequelize"}],
    "object-curly-newline": ["error", {"consistent": true}],
    "import/extensions": ["error", "ignorePackages", {
      "js": "never",
      "mjs": "never",
      "jsx": "never",
      "ts": "never",
      "tsx": "never"
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.mjs",
        "**/*.test.jsx",
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}